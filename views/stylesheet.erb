html, body { font-family: Trebuchet, "Lucida Sans Unicode", "Lucida Grande", "Lucida Sans", Arial, sans-serif; font-size: 95%; }
h1, h2, h3, h4, h5, h6 { font-family: Trebuchet, Tahoma, Arial, sans-serif; }
.group { float: left; border: 2px solid #ccddcc; padding: 4px; margin: 2px; }

table { border: 1px solid black; padding: 1px; border-collapse: collapse; margin-top: 1em; }
table th { text-align: center; }
table th, table td { border: 1px solid black; padding: 1px 4px; }
table td.number { text-align: right; }
table tfoot { font-weight: bold; }
table tfoot th, table tfoot td { background-color: #ccc; }