<div class="group">
  <h2>Disk Free Space</h2>
  <div class="graph">
    <%= Gchart.bar(:data => @disk.map(&:last), :legend => @disk.map(&:first),
        :alt => "#{@disk.map {|name, free| '%s %s free' % [name, number_to_human_size(free)]}.join(", ")}",
        :size => "550x260",
        :bar_colors => "76A4FB|FB76A4|76FBA4|A476FB|76A4FB|A4FB76|A476FB",
        :format => "image_tag") %>
    <table class="data">
      <thead>
        <tr>
          <th>Server</th>
          <th>Mount point</th>
          <th>Free Space</th>
        </tr>
      </thead>
      <tbody>
        <%= partial(:disk, :collection => @disk) %>
      </tbody>
    </table>
  </div>
</div>
